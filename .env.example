# AI Assistant Environment Configuration
# Copy this file to .env and add your actual API keys

# Security
JWT_SECRET_KEY=dev_secret_key_change_in_production
API_KEY_1=dev_key_123
API_KEY_1_NAME=development
API_KEY_1_PERMISSIONS=read,write,admin

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=mistral-small:latest  # Optimal for streaming
OLLAMA_FALLBACK_MODEL=llama3.2:1b  # Ultra-fast fallback

# API Keys for External Tools
# Brave Search API Key
# Get from: https://brave.com/search/api/
BRAVE_API_KEY=your_brave_api_key_here

# OpenWeather API Key
# Get from: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key_here

# News API Key
# Get from: https://newsapi.org/
NEWS_API_KEY=your_news_api_key_here

# OpenAI API Key (for TTS)
OPENAI_API_KEY=your_openai_api_key_here

# Audio Configuration
AUDIO_SAMPLE_RATE=48000  # Optimized for M3 Max
AUDIO_CHUNK_SIZE=512     # Lower latency on M3

# Database
DATABASE_URL=sqlite:///data/assistant.db

# MCP Server
MCP_ENABLED=true
MCP_HOST=127.0.0.1
MCP_PORT=8000

# Performance (M3 Max Optimizations)
PYTORCH_ENABLE_MPS_FALLBACK=1
USE_MPS=true
MAX_WORKERS=8

# Development
DEBUG=false
DEVELOPMENT=true